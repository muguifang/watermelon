<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.muguifang.mapper.myMapper.TMyMusicMapper">
    <resultMap id="BaseResultMap" type="com.muguifang.po.TMusic" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="musicName" property="musicname" jdbcType="VARCHAR" />
        <result column="musicPhoto" property="musicphoto" jdbcType="VARCHAR" />
        <result column="musicPlay" property="musicplay" jdbcType="VARCHAR" />
        <result column="mvPlay" property="mvplay" jdbcType="VARCHAR" />
        <result column="recommend" property="recommend" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="type_id" property="typeId" jdbcType="INTEGER" />
        <result column="playNum" property="playnum" jdbcType="INTEGER" />
        <result column="insertDate" property="insertdate" jdbcType="TIMESTAMP" />
    </resultMap>
    <sql id="Base_Column_List" >
    id, musicName, musicPhoto, musicPlay, mvPlay, recommend, status, type_id, playNum,
    insertDate
  </sql>
    <select id="getAllMusicInfo" resultType="java.util.Map" parameterType="java.lang.String">
        select count(c.music_id) as num,m.id as mId,m.musicName as mName,m.musicPhoto as pic
        from t_music m
        left join t_collect c on m.id = c.music_id
        <where>
            <if test="_parameter != null and _parameter != ''">
                and m.musicName like concat('%',#{_parameter},'%')
            </if>
        </where>
        GROUP BY m.id
        ORDER BY c.music_id desc
    </select>
    <select id="getAllMusic" resultType="java.util.Map" parameterType="java.lang.String">
        SELECT
            tm.id,
            tm.musicName,
            tm.musicPhoto,
            tm.musicPlay,
            tm.mvPlay,
            tm.playNum,
            tm.recommend,
            tm.STATUS,
            tm.insertDate,
            tt.typeName,
            tt.id as tId
        FROM
	    t_music tm
	    LEFT JOIN t_type tt ON tm.type_id = tt.id
	    <where>
            <if test="_parameter != null and _parameter != ''">
                and tm.musicName like concat('%',#{_parameter},'%')
            </if>
        </where>
        ORDER BY
	    tm.insertDate DESC
    </select>
    <!--查询最新的前十条音乐-->
    <select id="getTenMusic" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_music
        ORDER BY
        insertDate DESC
        limit 10
    </select>
    <!--查询点击量最多的前十条音乐-->
    <select id="getRecommendMusic" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_music
        ORDER BY
        playNum DESC
        limit 10
    </select>
</mapper>